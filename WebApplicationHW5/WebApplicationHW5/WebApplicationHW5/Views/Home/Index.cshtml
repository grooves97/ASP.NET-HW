@{
    ViewBag.Title = "Index";
    var messages = ViewData["Messages"] as List<WebApplicationHW5.Models.Message>;
}

<h2>Стена</h2>


<div aria-live="polite" aria-atomic="true" style="position: relative; min-height: 200px;">
    <div class="toast" style="position: absolute; top: 0; right: 0;">
        <div class="toast-header">
            <img src="" class="rounded mr-auto" alt="...">
            <strong class="mr-auto">Moderator</strong>
            <small>11 mins ago</small>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body">
            Привет друг, выскажи свои мысли на нашей стенке.
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Кто</th>
            <th scope="col">Что</th>
        </tr>
    </thead>
    <tbody id="tableBody">
        @foreach (var message in messages)
        {
            <tr scope="row">
                <td>@message.Name</td>
                <td>@message.Text</td>
            </tr>
        }
    </tbody>
</table>


<div id="container" class="container-fluid">
    <input type="text" name="name" id="name" placeholder="Имя" />
    <input type="text" name="text" id="text" placeholder="Ваша цитата" />
    <input type="submit" id="button" value="Опубликовать" />
</div>